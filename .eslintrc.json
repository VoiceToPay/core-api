{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"plugins": ["sort-requires"],
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "never"],
		"sort-requires/sort-requires": 2
	}
}
